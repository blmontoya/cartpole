{
  "name": "Cartpole Container",
  "image": "template:latest",
  "workspaceFolder": "/workspace/cartpole",
  "runArgs": ["--env", "PYTHONUNBUFFERED=1"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.pythonPath": "/workspace/cartpole/.pixi/envs/test/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true
      }
    }
  },
  "postStartCommand": "source /workspace/cartpole/.pixi/envs/test/bin/activate"
}
